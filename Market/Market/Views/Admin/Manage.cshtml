@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>欢迎！-商城后台管理系统</title>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <link href="~/Content/css/admin.css" rel="stylesheet" />
    <link href="~/Content/css/loading.css" rel="stylesheet" />
    <link href="~/Content/icon/css/animation.css" rel="stylesheet" />
    <link href="~/Content/icon/css/shop.css" rel="stylesheet" />
    <!--[if IE 7]><link href="~/Content/icon/css/shop-ie7.css" rel="stylesheet" /><![endif]-->
</head>
<body class="body">
    <div id="loading"><div class="ajax-loader" style="margin:0 auto;"></div></div>
<script>
    var screenheight = document.documentElement.clientHeight || document.body.clientHeight;
    var loading = document.getElementById("loading"); loading.style.position = "absolute"; loading.style.width = 100 + '%'; loading.style.top = screenheight / 2 + 'px'; loading.style.zIndex = 10;
</script>
    <div id="header">
        <i class="icon-bag"></i>
            后台管理
    </div>
    <div id="Menu">
        <ul id="Adminlist" class="adminlist">

            <li class="active"><a target="_right" href="/admin/Wellcome">Wellcome!</a></li>
        
            <li><a target="_right" href="/admin/Category"><i class="icon-th-large"></i>类目 </a></li>
            
            <li><a target="_right" href="/admin/ItemList"><i class="icon-shop"></i>商品 </a></li>

            <li><a target="_right" href="/admin/Adminuser"><i class="icon-key"></i>管理员 </a></li>

            <li><a target="_right" href="/admin/user"><i class="icon-users"></i>用户 </a></li>
        </ul>
    </div>

    <div id="main">
        <iframe id="frame" src="/admin/Wellcome" name="_right" scrolling="no"></iframe>
    </div>
    <script>
        var screenheight = document.documentElement.clientHeight || document.body.clientHeight;
        document.getElementById("frame").style.height = (screenheight - 150>550)?(screenheight - 150):550 + "px";
        $("#Adminlist li").click(function () {
            $("#Adminlist li").removeClass("active");
            $(this).addClass("active");
        });
        window.onload = function () {
            document.getElementById("loading").style.display = "none"
        }
    </script>
</body>
</html>

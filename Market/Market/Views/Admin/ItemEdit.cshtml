@model Market.Models.Item

@{
    ViewBag.Title = "ItemEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("ItemEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.ItemID)
<ul class="item-new">
        <li>
            @Html.LabelFor(model => model.CategoryID)
            <div class="inputbox">
                @Html.DropDownListFor(model => model.CategoryID, (IEnumerable<SelectListItem>) ViewBag.cat)
            </div>
        </li>

       <li>
            @Html.LabelFor(model => model.Title)
            <div class="inputbox">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
             </div>
        </li>

        <li>
            @Html.LabelFor(model => model.Content)
            <div class="inputbox">
                @Html.EditorFor(model => model.Content)
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </li>

        <li>
            @Html.LabelFor(model => model.Text)
            <div class="inputbox">
                <textarea name="Text" id="Text">@Model.Text</textarea>
                @Html.ValidationMessageFor(model => model.Text)
            </div>
        </li>

        <li>
            @Html.LabelFor(model => model.CoverImg)
            <div class="inputbox">
                <input type="file" name="file1" id="file1" />
            </div>
        </li>

        <li>
            @Html.LabelFor(model => model.Price)
            <div class="inputbox">
                @Html.EditorFor(model => model.Price)
                @Html.ValidationMessageFor(model => model.Price)
            </div>
        </li>

        <li>
            @Html.LabelFor(model => model.OldPrice)
            <div class="inputbox">
                @Html.EditorFor(model => model.OldPrice)
                @Html.ValidationMessageFor(model => model.OldPrice)
            </div>
        </li>

        <li>
            @Html.LabelFor(model => model.Sellnum)
            <div class="inputbox">
                @Html.EditorFor(model => model.Sellnum)
                @Html.ValidationMessageFor(model => model.Sellnum)
            </div>
        </li>

        <li>
            @Html.LabelFor(model => model.Stock)
            <div class="inputbox">
                @Html.EditorFor(model => model.Stock)
                @Html.ValidationMessageFor(model => model.Stock)
            </div>
        </li>
</ul>
        <div class="item-subbox">
            <input class="sub" type="submit" value="添加" />
        </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
